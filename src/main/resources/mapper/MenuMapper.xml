<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.vhr.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.vhr.entity.Menu">
        <id column="id" property="id" />
        <result column="url" property="url" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="name" property="name" />
        <result column="iconCls" property="iconCls" />
        <result column="parentId" property="parentId" />
        <result column="enabled" property="enabled" />
        <association property="meta" javaType="com.example.vhr.entity.Meta">
            <result column="keepAlive" property="keepAlive" jdbcType="BIT" />
            <result column="requireAuth" property="requireAuth" jdbcType="BIT" />
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, url, path, component, name, iconCls, keepAlive, requireAuth, parentId, enabled
    </sql>

    <select id="listMenusByHrId" resultMap="BaseResultMap">
        select distinct m.* from hr, hr_role hrr, role r, menu_role mr, menu m
        where hr.id = hrr.hrid and hrr.rid = r.`id` and mr.rid = r.id and m.id = mr.mid
        and hr.id = #{hrId}
    </select>

</mapper>
